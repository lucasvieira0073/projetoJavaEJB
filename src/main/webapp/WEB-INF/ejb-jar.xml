<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
 http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
 version="3.1">
	
	<!-- aqui fica a lista de interceptadores -->
	 <interceptors>
	 	<interceptor>
	 		<interceptor-class>
				br.com.projetoejb.interceptors.LogInterceptador
			</interceptor-class>
	 	</interceptor>
	 </interceptors>
	 
	 <!-- aqui Ã© oque o interceptador ira interceptar -->
	 <assembly-descriptor>
		<interceptor-binding>
			<!-- <ejb-name>*</ejb-name> -->
			<ejb-name>ProdutoDao</ejb-name> 
			<interceptor-class>
				br.com.projetoejb.interceptors.LogInterceptador
			</interceptor-class>
		</interceptor-binding>
	</assembly-descriptor>

</ejb-jar>